<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>CypherHound Query Report</title>
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
<div class="container py-5">
  <h1 class="mb-4">CypherHound Query Report</h1>
  <p class="text-muted">Generated: {{ generated }}</p>

  <table class="table table-hover align-middle shadow-sm">
    <thead class="table-dark">
      <tr>
        <th scope="col">Query description</th>
        <th scope="col" class="text-center" style="width: 12rem">Details</th>
      </tr>
    </thead>
    <tbody>
    {% for row in rows %}
      <tr>
        <td>{{ row.desc }}</td>
        <td class="text-center">
          <a class="btn btn-outline-primary btn-sm"
             href="{{ row.file }}" target="_blank">
             View ({{ row.count }})
          </a>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>
</body>
</html>
